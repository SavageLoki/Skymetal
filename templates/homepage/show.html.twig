{% extends "base.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}


{% block content %}
    <div class="fullArticle">
        <div class="articleOne">
    <div class="showArticle">
        <div class="showArticleContent">
            <div class="articleTitleDiv">
                <div class="articleTitle">
    <h2>{{ article.title }}</h2>
                    &nbsp;&nbsp;
    {{ article.publicationDate|date('d/m/Y') }}
            </div>
            </div>
    <p>
        {% if article.picture != NULL %}
        <img src="{{ asset('uploads/' ~ article.picture) }}">
        {% endif %}
    </p>
    <div class="articleContent">
        <p>

        {{ article.Content }}

        </p>
    </div>
        </div>
    </div>

    <section class="comments" id="comments">

        <h3>Comments</h3>

        {{ render(controller(
            'App\\Controller\\CommentController::index'
        )) }}

    <div class="newComment">
        <div class ='newCommentContent'>
       {{ render(controller('App\\Controller\\CommentController::new', {'id': article.id})) }}
        </div>
    </div>
    </section>
        </div>
    <div class="blocArticle">
        <h3>Derniers articles</h3>
        {{ render(controller(
            'App\\Controller\\HomepageController::index'
        )) }}
    </div>

    </div>

{% endblock %}